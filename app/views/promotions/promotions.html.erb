
<h1>Promotions</h1>

<table class="table table-striped table-hover">

  <thead class="thead-dark">
    <tr>
      <th>Promotion</th>
      <th>Promo Code</th>
      <th>Flat Discount</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @promotions.each do |promotion| %>
      <tr>
      <td><%= promotion.title %></td>
        <td><%= promotion.promo_code %></td>
        <td><%= promotion.discount_flat %></td>
        <% if current_user.manager_role?%>
        <td class="text-nowrap">
          <%= link_to 'destroy', promotion_path(promotion), method: :delete, class: "btn btn-danger" %>
        </td>
        <% else %>
        <% end %>
      </tr>
    <% end %>
  </tbody>

</table>

<% if current_user.manager_role?%>
<p>
  <%= link_to "New Promotion", newpromotion_path, class: "btn btn-secondary"%>
</p>
<% else %>
<% end %>


